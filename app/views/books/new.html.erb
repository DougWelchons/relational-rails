<h1>New Book For <%= @library.name %></h1>

<%= form_tag "/libraries/#{@library.id}/books", method: :post do%>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :pages %>
  <%= text_field_tag :pages %>
  <%= label_tag :available %>
  <%= text_field_tag :available %>
<%= submit_tag 'Create Book' %>
<% end %>