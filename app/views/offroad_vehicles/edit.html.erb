<%= form_with url: "/offroad_vehicles/#{@vehicle.id}", method: :patch, local: true do |form| %>
  <h3><%= form.label :name %>
  <%= form.text_field :name, value: @vehicle.name %></h3>
  <h3><%= form.label :make %>
  <%= form.text_field :make, value: @vehicle.make %></h3>
  <h3><%= form.label :model %>
  <%= form.text_field :model, value: @vehicle.model %></h3>
  <h3><%= form.label :tire_size %>
  <%= form.number_field :tire_size, value: @vehicle.tire_size %></h3>
  <h3><%= form.label :passed_safety_inspection %>
  <%= form.check_box :passed_safety_inspection, {checked: @vehicle.passed_safety_inspection}%></h3>
  <%= form.submit 'Update Vehicle' %>
<% end %>
